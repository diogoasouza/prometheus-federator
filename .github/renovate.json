{
  "extends": [
    "github>rancher/renovate-config#release",
    "group:allNonMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "baseBranches": [
    "main",
    "release/v3.x",
    "release/v2.x",
    "release/v1.x",
    "release/v0.x"
  ],
  "packageRules": [
    {
      "groupName": "Docker File Deps",
      "groupSlug": "docker-bumps",
      "matchManagers": [
        "dockerfile"
      ]
    },
    {
      "matchPackageNames": [
        "/^github.com/rancher/wrangler/"
      ],
      "matchUpdateTypes": ["minor","patch"]
    },
    {
      "matchPackageNames": [
        "golang",
        "go",
        "/registry.suse.com/bci/golang/"
      ],
      "allowedVersions": "<1.24.0"
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "allowedVersions": "<1.24.0"
    },
    {
      "matchPackageNames": [
        "golang",
        "go",
        "/registry.suse.com/bci/golang/"
      ],
      "allowedVersions": "<1.24.0"
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "allowedVersions": "<1.24.0"
    },
    {
      "matchBaseBranches": ["main"],
      "matchPackageNames": [
        "/kubernetes/kubernetes/",
        "/rancher/kubectl/"
      ],
      "allowedVersions": "<1.33.0"
    }
  ]
}
